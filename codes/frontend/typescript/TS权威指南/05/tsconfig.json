{
  "compilerOptions": {
    "sourceMap": true,
    
    "target": "es5",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    "module": "esnext",
    "moduleResolution": "node",

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },

  "include": [
    "src"
  ],
  "compileOnSave": false
}