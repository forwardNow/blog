::-webkit-scrollbar{
  width: 8px;
  height: 8px;
}
::-webkit-scrollbar-thumb{
  border-radius: 100px;
  background-color: rgba(50,50,50,0.3);
}
::-webkit-scrollbar-track{
  border-radius: 100px;
  background-color: rgba(50,50,50,0.1);
}

.sidebar {
  user-select: none;
}

.sidebar-heading {
  display: flex;
  align-items: center;
  line-height: 16px;
}

.sidebar-heading__arrow {
  flex: 0 0 auto;

  display: flex;
  align-items: center;
  justify-content: center;

  width: 12px;
  height: 12px;

}

.sidebar-heading__arrow.down {
  transform: rotate(90deg);
}
.sidebar-heading__arrow.right {

}

.sidebar-heading__icon {
  flex: 0 0 auto;

  margin-left: 4px;
  margin-top: 2px;

  width: 16px;
  height: 16px;

  display: flex;
  align-items: center;
  justify-content: center;
}

.sidebar-heading__title {
  margin-left 4px;
}

